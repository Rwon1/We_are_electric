    }
    .sparkle {
      position: absolute;
      width: 10px;
      height: 10px;
      background: rgba(255, 255, 255, 0.8);
      border-radius: 50%;
      pointer-events: none;
      animation: sparkleAnim linear infinite;
    }
    @keyframes sparkleAnim {
      0% {
        transform: translateY(0) rotate(0deg);
        opacity: 0;
      }
      100% {
        transform: translateY(-400px) rotate(360deg);
        opacity: 1;
      }
    }
    #calculator {
      width: 350px;
