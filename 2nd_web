    <script>
        function calculate() {
            // Нужно добавить валидацию входных данных и вывод ошибок
            const U1 = parseFloat(document.getElementById("U1").value);
            const U2 = parseFloat(document.getElementById("U2").value);
            const K = parseFloat(document.getElementById("K").value);
            const f = parseFloat(document.getElementById("f").value);
            const B_max = parseFloat(document.getElementById("B_max").value);
            const a = parseFloat(document.getElementById("a").value);
            const J = parseFloat(document.getElementById("J").value);

            if (isNaN(U1) || isNaN(U2) || isNaN(K) || isNaN(f) || isNaN(B_max) || isNaN(a) || isNaN(J)) {
                // Вывод сообщений об ошибках, если значения неверны
                document.getElementById("U1Error").textContent = isNaN(U1) ? "Введите число" : "";
                document.getElementById("U2Error").textContent = isNaN(U2) ? "Введите число" : "";
                document.getElementById("KError").textContent = isNaN(K) ? "Введите число" : "";
                document.getElementById("fError").textContent = isNaN(f) ? "Введите число" : "";
                document.getElementById("B_maxError").textContent = isNaN(B_max) ? "стоит наверное ввести число" : "";
                document.getElementById("aError").textContent = isNaN(a) ? "да Введите число" : "";
                document.getElementById("JError").textContent = isNaN(J) ? "пж ха Введите число" : "";
                return;
            } else {
                // Сброс сообщений об ошибках
                document.getElementById("U1Error").textContent = "";
                document.getElementById("U2Error").textContent = "";
                document.getElementById("KError").textContent = "";
                document.getElementById("fError").textContent = "";
                document.getElementById("B_maxError").textContent = "";
                document.getElementById("aError").textContent = "";
                document.getElementById("JError").textContent = "";
            }

            // Остальной код расчета когда уже я буду это делать нормально
            const result = calculateNumberOfTurns(U1, U2, K, f, B_max, a, J);
            const resultElement = document.getElementById("result");
            resultElement.innerHTML = `
                <h2>Результат расчета:</h2>
                <p>Число витков первичной обмотки (N1): <span>${result.N1.toFixed(2)}</span></p>
                <p>Число витков вторичной обмотки (N2): <span>${result.N2.toFixed(2)}</span></p>
            `;
        }
// Нет ну у меня реально шиза скоро будет я не знаю как мне сделать вывод формулы нормально 
        function calculateNumberOfTurns(U1, U2, K, f, B_max, a, J) {
            const N1 = (U1 * K) / (4.44 * f * B_max * a * J);
            const N2 = (U2 * K) / (4.44 * f * B_max * a * J);
            return { N1, N2 };
        }
    </script>
